    <script>
        // Funci칩n para actualizar el mes en la tabla
        function updateMonth() {
            const monthSelect = document.getElementById("month-select");
            const month = monthSelect.value;
            document.getElementById("month").value = month.charAt(0).toUpperCase() + month.slice(1);
        }

        // Funci칩n para compartir los datos (se muestra como un ejemplo simple)
        function shareData() {
            let tableData = "";
            const table = document.getElementById("turnos-table");
            for (let i = 0; i < table.rows.length; i++) {
                let row = table.rows[i];
                for (let j = 0; j < row.cells.length; j++) {
                    tableData += row.cells[j].innerText + "\t";
                }
                tableData += "\n";
            }
            alert("Datos listos para compartir:\n" + tableData);
        }

        // Inicializar el mes
        updateMonth();
    </script>

